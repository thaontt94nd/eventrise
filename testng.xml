<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Suite All" verbose="1">

    <test name="Regression Test All class on firefox">
        <parameter name="browser" value="firefox"></parameter>
        <classes>
            <class name="testsuite.windowspop_ExplicitWai" />
        </classes>
    </test>

    <test name="Regression Test All class on chrome">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="testsuite.windowspop_ExplicitWai" />           
        </classes>
    </test>
    
    <test name="Regression Test All class on edge">
        <parameter name="browser" value="edge"></parameter>
        <classes>
            <class name="testsuite.windowspop_ExplicitWai" />           
        </classes>
    </test>

</suite>